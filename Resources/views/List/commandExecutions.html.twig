{% extends "JMoseCommandSchedulerBundle::layout.html.twig" %}
{% trans_default_domain 'JMoseCommandScheduler' %}

{% block title %}
    {{ command.name }} - {{ 'list.previousExecutions'|trans }}
{% endblock title %}

{% block content %}
    <div class="table-responsive table-stripped">
    <table class="table">
        <thead>
            <tr>
                <th>{{ "detail.execution"|trans }}</th>
                <th>{{ "detail.runtime"|trans }}</th>
                <th>{{ "detail.returnCode"|trans }}</th>
            </tr>
        </thead>

        <tbody>
        {% for execution in executions %}
            <tr>
                <td>{{ execution.executionDate|date( "dateFormat"|trans ) }}</td>
                <td>{{ execution.runtime }}</td>
                <td>{{ execution.returnCode }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('jmose_command_scheduler_list', {'_type':'commands'}) }}" class="btn btn-primary btn-lg pull-right" role="button">{{ "action.new"|trans }} Â»</a>
{% endblock content %}
